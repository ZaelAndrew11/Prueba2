<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.aguzman.prueba2.NewEvent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/fab_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/headline_size"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_content_aareas"
            android:text="Nuevo Regalo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:padding="@dimen/fab_margin">

        <EditText
            android:id="@+id/namePersonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:hint="@string/name_person"
            android:inputType="text"
            android:padding="@dimen/fab_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_content_aareas"
            android:layout_marginTop="@dimen/margin_content_aareas"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_content_aareas"
                android:text="@string/priority_gift" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/priorityOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_style"
                    android:spinnerMode="dialog" />

                <EditText
                    android:id="@+id/priceGiftEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_marginLeft="@dimen/margin_content_aareas"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_style"
                    android:ems="10"
                    android:hint="@string/budget_gift"
                    android:inputType="number"
                    android:padding="@dimen/fab_margin" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/descriptionGiftEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="150dp"
            android:background="@drawable/edit_text_style"
            android:gravity="top"
            android:hint="@string/description_gift"
            android:padding="@dimen/fab_margin" />
    </LinearLayout>


</LinearLayout>
